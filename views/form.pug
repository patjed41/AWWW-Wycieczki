extends layout.pug

block scripts
  link(rel='stylesheet' href='style/style-index.css' type='text/css')
  link(rel='stylesheet' href='style/style-form.css' type='text/css')
  script(type='module').
    import {komunikat} from './js/modul.mjs';
    console.log(komunikat);
  script(defer='' src='js/validate-form.js')

block content
  #form-container
    h2 #{trip.name} - #{trip.price} zł
    #form-div
      form#zakup-wycieczki(name='zakup-wycieczki' action='' method='post')
        label.dane-klienta
          input(type='text' name='imie')
          |           Imi&eogon;
          span.form-komunikat  - jest wymagane
          span.form-komunikat  - za d&lstrok;ugie
        label.dane-klienta
          input(type='text' name='nazwisko')
          |           Nazwisko
          span.form-komunikat  - jest wymagane
          span.form-komunikat  - za d&lstrok;ugie
        label#ile-wycieczek-label
          input(type='number' name='ile-wycieczek')
          |           Ilo&sacute;&cacute;
        label
          input(type='submit' value='Zamów')

block invisible
  #okModal.modal
    .modal-content
      span.close Ok
      p.modal-text
  script.
    console.log("komunikat");
  script.
    document.getElementsByClassName('header-opcja')[2].style.color = '#09008d';